<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>New band</title>

  <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>

<body>
  <h1 class="page-header">Be a part of The Bands community.</h1>
  <h2>Add new band</h2>
  <% if (errors) { %>
      <% for (let i = 0; i < errors.length; i++) { %>
        <div class="alert alert-danger"><%= errors[i].msg %></div>
      <% } %>
  <% } %>
  <form action="/bands" enctype="multipart/form-data" method="POST">
    <div class="form-group">
      <label>Name of the band</label>
      <input type="text" class="form-control" placeholder="Band's name" name="bandName" required>
    </div>
    <div class="form-group">
      <label>Formed on</label>
      <input type="text" class="form-control" placeholder="Date of band's creation. For example, 1991-03-30" name="bandFormed" required>
    </div>
    <div class="form-group">
      <label>Members</label>
      <input type="number" min="1" class="form-control" placeholder="Amount of members" name="bandMembers" required>
    </div>
    <div class="form-group">
      <label>Genre</label>
      <input type="text" class="form-control" placeholder="Main genre of band's music" name="bandGenre" required>
    </div>
    <div class="form-group">
      <label>Albums</label>
      <input type="number" min="0" class="form-control" placeholder="Amount of albums" name="bandAlbums" required>
    </div>
    <div class="form-group">
      <label>Logo</label>
      <input type="file" accept="image/*" name="bandLogo">
    </div>
    <div class="form-group">
      <label>Members</label>
      <input type="file" accept="image/*" name="bandMembers">
    </div>
    <input type="submit" class="btn btn-default" value='Add' />
  </form>

  <div class="text-center" >
    <a href="/bands">Back</a>
  </div>

</body>
</html>
