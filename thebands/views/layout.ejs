<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/font/font.css">
</head>

<body>
      <div class="container">
        <div class="header">
          <ul class="ulClass">
            <li class="liClass"><a href="/">Home</a></li>
            <% if (!user) { %>
              <li class="liClass"><a href="/users/login">Login</a></li>
              <li class="liClass"><a href="/users/register">Register</a></li>
            <% } %>
            <% if (user) { %>
              <li class="liClass"><a href="/users/profile/<%= user.username %>"><%= user.username %></a></li>
              <li class="liClass"><a href="/users/logout">Logout</a></li>
            <% } %>
            <li class="liClass"><a href="/about">About</a></li>
          </ul>
        </div>
      </div>

      <% if (success_msg.length > 0) {%>
        <div class="alert-success-msg"><%= success_msg %></div>
      <% } %>
      <% if (error_msg.length > 0) {%>
        <div class="alert-error-msg"><%= error_msg %></div>
      <% } %>
      <% if (error.length > 0) {%>
        <div class="alert-error"><%= error %></div>
      <% } %>

      <%- body %>

      <div class="container">
        <footer class="footer">
          <p>&copy; 2016 The Bands, Inc.</p>
        </footer>
      </div> <!-- /container -->
</body>
</html>
