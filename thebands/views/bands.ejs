<!doctype html>

<html lang="en">

<head>
    <meta charset="utf-8">

    <title>
        List of Bands
    </title>
</head>

<body>
  <div class="container-fluid">
    <div class="col-md-4 col-md-offset-4">
      <form action="/bands" method="GET">
        <div class="input-group">
          <% if(search_value.length > 0) { %>
            <input type="text" name="bandName" value='<%= search_value %>' class="form-control" placeholder="Enter band's name..." />
          <% } %>
          <% if(search_value.length === 0) { %>
            <input type="text" name="bandName" class="form-control" placeholder="Enter band's name..." />
          <% } %>
          <span class="input-group-btn">
            <input type="submit" class="btn btn-default" value='Search'>
          </span>
        </div>
      </form>
    </div>
  </div>
  <br>

  <div class="container-fluid">
    <div class="row">
      <% for (let i = 0; i < arr.length; i++) { %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= arr[i].img_path %>" alt="<%= arr[i].alt %>">
          <div class="caption">
            <h3><%= arr[i].title %></h3>
            <p>Something something something</p>
            <p><a href="<%= arr[i].href %>" class="btn btn-primary" role="button">More...</a></p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <div class="container-fluid">
    <div class="col-md-3 col-centered">
      <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/bands?page=<%= (curPage - 1) %>&amp;bandName=<%= search_value %>" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <li><a href="/bands?page=<%= (curPage - 2) %>&amp;bandName=<%= search_value %>"><%= (curPage - 2) %></a></li>
        <li><a href="/bands?page=<%= (curPage - 1) %>&amp;bandName=<%= search_value %>"><%= (curPage - 1) %></a></li>
        <li><a href="/bands?page=<%= curPage %>&amp;bandName=<%= search_value %>"><%= curPage %></a></li>
        <li><a href="/bands?page=<%= (curPage - -1) %>&amp;bandName=<%= search_value %>"><%= (curPage - -1) %></a></li>
        <li><a href="/bands?page=<%= (curPage - -2) %>&amp;bandName=<%= search_value %>"><%= (curPage - -2) %></a></li>
        <li>
          <a href="#" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    </div>
  </div>

  <div class="container-fluid">
    <div class="text-center">
        <a href="/addband">Add new band</a>
    </div>
  </div>
    <!-- <script src="js/scripts.js"></script> -->
</body>

</html>
